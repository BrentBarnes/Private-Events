<div class="d-flex justify-items-center h-100">
  <div class="card w-25 h-50 mx-auto mt-5 shadow">
    <div class="card-body">
      <div class="d-flex justify-content-center mb-3">
        <h1>Sign in</h1>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
        <!-- Email input -->
        <div class="form-outline mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
        </div>
  
        <!-- Password input -->
        <div class="form-outline mb-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
        </div>
  
        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
          <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
  
          <div class="col">
            <!-- Simple link -->
            <a href="#!">Forgot password?</a>
          </div>
        </div>
  
        <!-- Submit button -->
  
        <div class="d-grid gap-2">
        <%= f.submit "Sign in", class: "btn btn-primary mb-4" %>
        </div>
        <%# <button type="button" class="btn btn-primary btn-block mb-4">Sign in</button> %>
  
        <!-- Register buttons -->
        <div class="text-center">
          <p>Not a member? <%= link_to "Register", new_registration_path(resource_name) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
