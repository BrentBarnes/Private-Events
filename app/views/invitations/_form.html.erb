
<%= form_with model: @invitation, data: { turbo: false } do |form| %>
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :invitation, class: "form-label"%>
        <%= form.email_field :invited_user_email, class: "form-control" %>
        <%= form.hidden_field :invited_event_id, :value => params[:invitation][:invited_event_id] %>
      </div>
      <div class="d-grid gap-2 mb-3">
        <%= form.submit class: "btn btn-primary" %>
      </div>
      <div class="d-grid gap-2">
        <%= link_to "Back to your events", user_show_path, class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>